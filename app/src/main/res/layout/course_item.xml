<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="16dp"
    android:backgroundTint="@android:color/transparent"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_course">

        <ImageView
            android:id="@+id/imageView_item_course"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/image_alert"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_courseTitle_item_course"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/din_medium"
            android:text="@string/title_course"
            android:textColor="@color/black1"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@id/imageView_item_course"
            app:layout_constraintStart_toStartOf="@+id/tv_courseDescription_item_course"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_courseDescription_item_course"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:fontFamily="@font/din_regular"
            android:maxLines="3"
            android:text="@string/description_course"
            android:textColor="@color/black3"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/tv_courseDate_item_course"
            app:layout_constraintEnd_toStartOf="@id/imageView_item_course"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/tv_courseDate_item_course"
            app:layout_constraintTop_toBottomOf="@id/tv_courseTitle_item_course" />

        <TextView
            android:id="@+id/tv_courseDate_item_course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_red_label"
            android:fontFamily="@font/din_regular"
            android:paddingLeft="12dp"
            android:paddingTop="2dp"
            android:paddingRight="8dp"
            android:paddingBottom="4dp"
            android:text="@string/Number_video_course"
            android:textColor="@color/white3"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>

