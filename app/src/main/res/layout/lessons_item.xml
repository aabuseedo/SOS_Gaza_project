<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="@drawable/side_border_lessons"
    android:gravity="center_vertical"
    android:layout_margin="10dp">

    <!-- أيقونة تشغيل يوتيوب (يسار العنصر) -->
    <ImageView
        android:id="@+id/icon_play"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:contentDescription="تشغيل"
        android:src="@drawable/ic_youtube"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- محتوى الدرس: اسم + وصف -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

    </LinearLayout>

    <!-- أيقونة الدرس (يمين العنصر) -->

    <ImageView
        android:id="@+id/icon_lesson"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="رمز الدرس"
        android:src="@drawable/ic_lesson"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lesson_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/din_medium"
        android:maxLines="3"
        android:text="@string/name_lessons"
        android:textColor="@color/black1"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/icon_lesson"
        app:layout_constraintEnd_toStartOf="@+id/icon_lesson"
        app:layout_constraintTop_toTopOf="@+id/icon_lesson" />

    <TextView
        android:id="@+id/lesson_description"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/din_medium"
        android:text="@string/description_lessons"
        android:textColor="@color/black3"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/lesson_title"
        app:layout_constraintStart_toEndOf="@+id/icon_play"
        app:layout_constraintTop_toBottomOf="@+id/lesson_title" />
</androidx.constraintlayout.widget.ConstraintLayout>
