<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white3"

    tools:context=".activity.ConfirmChangePhoneNumActivity">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout0"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_back_icon_ConfirmChangePhoneNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/back_icon" />

        <TextView
            android:id="@+id/tv_title_activity_ConfirmChangePhoneNum"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:background="@color/white3"
            android:fontFamily="@font/din_medium"
            android:gravity="center"
            android:text="@string/title_ConfirmChangePhoneNumActivity"
            android:textColor="@color/red1"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout0"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/din_medium"
        android:text="@string/description_ConfirmChangePhoneNumActivity"
        android:textColor="@color/black1"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/VerifyAccount_et_ConfirmChangePhoneNum"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <EditText
        android:id="@+id/VerifyAccount_et_ConfirmChangePhoneNum"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/item_edit_text"
        android:ems="10"
        android:inputType="text"
        android:paddingStart="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/Resend_tv_ConfirmChangePhoneNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/din_medium"
        android:text="@string/hint1_ConfirmChangePhoneNumActivity"
        android:textColor="@color/black2"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/VerifyAccount_et_ConfirmChangePhoneNum"
        app:layout_constraintStart_toStartOf="@+id/VerifyAccount_et_ConfirmChangePhoneNum"
        app:layout_constraintTop_toBottomOf="@+id/VerifyAccount_et_ConfirmChangePhoneNum" />

    <Button
        android:id="@+id/confirm_btn_ConfirmChangePhoneNum"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:background="@drawable/item_button_red"
        android:fontFamily="@font/din_medium"
        android:text="@string/btn_ConfirmChangePhoneNumActivity"
        android:textColor="@color/white2"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Resend_tv_ConfirmChangePhoneNum" />

</androidx.constraintlayout.widget.ConstraintLayout>